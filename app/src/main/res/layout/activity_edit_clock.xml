<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditClockActivity">
    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"

        android:layout_marginRight="52dp"
        app:layout_constraintTop_toTopOf="@+id/button_cancel"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/button_cancel" />


    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"

        app:layout_constraintTop_toBottomOf="@+id/edit_view_book_price"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/text_view_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书名"

        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/text_view_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"

        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_view_book_title"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_book_title"
        app:layout_constraintTop_toTopOf="@+id/edit_view_book_price" />

    <EditText
        android:id="@+id/edit_view_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text_view_book_title"

        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintTop_toTopOf="@+id/text_view_book_title"
        android:layout_marginTop="0dp" />
    "
    tools:layout_editor_absoluteY="16dp"
    tools:layout_editor_absoluteX="109dp" />

    <EditText
        android:id="@+id/edit_view_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"

        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text_view_book_price"

        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_view_book_title"
        app:layout_constraintHorizontal_bias="0.506" />
</androidx.constraintlayout.widget.ConstraintLayout>